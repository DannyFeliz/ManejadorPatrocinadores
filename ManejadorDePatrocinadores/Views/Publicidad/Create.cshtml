@using ManejadorDePatrocinadores.Models
@model ManejadorDePatrocinadores.Models.Publicidad

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Crear Publicidad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.programa_radio, htmlAttributes: new { @class = "control-label col-md-2" })
            <select class="form-control" required name="programa_radio">
                @foreach (var item in (List<ProgramaRadio>)ViewData["programas_de_radio"])
                {
                    <option value="@item.id">@item.nombre</option>
                }
            </select>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.segundos, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.segundos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.segundos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.patrocinador, htmlAttributes: new { @class = "control-label col-md-2" })
            <select class="form-control" required name="patrocinador">
                @foreach (var item in (List<Patrocinador>)ViewData["patrocinadores"])
                {
                    <option value="@item.numero_contrato">@item.nombre</option>
                }
            </select>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.precio_segundo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.precio_segundo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.precio_segundo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.costo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.costo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
